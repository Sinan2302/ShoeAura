		<script>
			function showLargeImage(imagePath) {
				document.getElementById("zoom-image").src = "/uploads/" + imagePath;
			}
			document.addEventListener('DOMContentLoaded', () => {
    const zoomImage = document.getElementById('zoom-image');
    const zoomToggle = document.getElementById('zoom-toggle');
    const zoomContainer = document.getElementById('zoom-container');
    const imageWrapper = document.querySelector('.image-wrapper');
    let isZoomedIn = false;

    zoomImage.addEventListener('click', (event) => {
        const rect = zoomImage.getBoundingClientRect();
        const x = (event.clientX - rect.left) / rect.width * 100;
        const y = (event.clientY - rect.top) / rect.height * 100;

        if (isZoomedIn) {
            // Zoom out
            zoomImage.style.transform = 'scale(1)';
            zoomContainer.style.width = '100%';
            zoomContainer.style.height = '500px';
            imageWrapper.scrollLeft = 0;
            imageWrapper.scrollTop = 0;
            zoomToggle.textContent = '+';
        } else {
            // Zoom in
            zoomImage.style.transform = `scale(2)`;
            zoomImage.style.transformOrigin = `${x}% ${y}%`;
            zoomContainer.style.width = '650px'; /* Adjust to your desired size */
            zoomContainer.style.height = '550px'; /* Adjust to your desired size */
            zoomToggle.textContent = '-';
        }

        isZoomedIn = !isZoomedIn;
    });

    zoomToggle.addEventListener('click', () => {
        zoomImage.style.transform = 'scale(1)';
        zoomContainer.style.width = '100%';
        zoomContainer.style.height = '400px';
        imageWrapper.scrollLeft = 0;
        imageWrapper.scrollTop = 0;
        zoomToggle.textContent = '+';
        isZoomedIn = false;
    });
});

