		<div class="breadcrumbs">
			<div class="container">
				<div class="row">
					<div class="col">
						<p class="bread">
							<% breadcrumbs.forEach((crumb, index) => { %>
								<span>
									<a style="color:tomato;" href="<%= crumb.url %>"><%= crumb.name %></a>
								</span>
								<% if (index < breadcrumbs.length - 1) { %> / <% } %>
							<% }) %>
						</p>
					</div>
				</div>
			</div>
		</div>

		<div class="breadcrumbs-two">
			<div class="container">
				<div class="row">
					<div class="col">
						<div class="breadcrumbs-img" style="background-image: url(images/cover-img-1.jpg);">
							<h2>Men's</h2>
						</div>
						<div class="menu text-center">
							<p><a href="#">New Arrivals</a> <a href="#">Best Sellers</a> <a href="#">Extended Widths</a> <a href="#">Sale</a></p>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="colorlib-featured">
			<div class="container">
				<div class="row">
					<div id="sneakersDiv" class="col-sm-4 text-center">
						<div class="featured">
							<div class="featured-img featured-img-2" style="background-image: url(/images/airmax%202.webp);">
								<h2 class="text-dark">Sneakers</h2>
								<p><a href="/category_collection/676160612c9479069c64d7f1" class="btn btn-primary btn-lg">Shop now</a></p>
							</div>
						</div>
					</div>
					<div id="FormalsDiv" class="col-sm-4 text-center">
						<div class="featured">
							<div class="featured-img featured-img-2" style="background-image: url(/images/Cap\ Toe\ Formal\ Shoes3.webp);">
								<h2 class="text-dark">Formals</h2>
								<p><a href="/category_collection/6761606e2c9479069c64d7f5" class="btn btn-primary btn-lg">Shop now</a></p>
							</div>
						</div>
					</div>
					<div id="SportssDiv" class="col-sm-4 text-center">
						<div class="featured">
							<div class="featured-img featured-img-2" style="background-image: url(/images/\ Boost\ Runner\ Prime2.webp);">
								<h2 class="text-dark">Sports</h2>
								<p><a href="/category_collection/6761607a2c9479069c64d7f9" class="btn btn-primary btn-lg">Shop now</a></p>
							</div>
						</div>
					</div>
				</div>
			</div>
